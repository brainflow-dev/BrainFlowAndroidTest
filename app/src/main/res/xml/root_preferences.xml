<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/board_selection">

        <ListPreference
            app:entries="@array/board_id_entries"
            app:entryValues="@array/board_id_values"
            app:key="@string/board_id_key"
            app:title="@string/board_id_title"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="-1"/>

        <EditTextPreference
            app:key="@string/ip_address_key"
            app:summary="@string/ip_address_summary"
            app:title="@string/ip_address_title"
            app:useSimpleSummaryProvider="false"/>

        <EditTextPreference
            app:key="@string/ip_port_key"
            app:summary="@string/ip_port_summary"
            app:title="@string/ip_port_title"
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>

</PreferenceScreen>